                print('')
                print('-------------------------------------------------------')
                print('GAME')
                print('Set winner: Computer')
                print('-------------------------------------------------------')
                PlayerScore = 0
                ComputerScore = 0
            print('')
            print('Go Again?')
            print('---------------------------------------------------------')
